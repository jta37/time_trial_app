<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
  <%= form_for article do |f| %>
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1">
      <% flash.each do |name, msg| -%>
       <%= content_tag :div, msg, class: name %>
      <% end -%>
      <div class="form-group">
        <%= f.text_field :title, placeholder: "Title", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.text_area :content, placeholder: "Content", class: "form-control", rows: "10" %>
      </div>
      <div class="col-xs-6">
      <%= f.submit class: "btn btn-primary btn-cust" %>
    	</div>
    	<div class="col-xs-6">
    		<%= button_to "Delete Article", @article, method: :delete, class: "btn btn-delete"%>
    	</div>
    </div>
    </div>  
  <% end %>
  </div>
</div>